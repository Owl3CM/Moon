{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Moon CSS Configuration",
  "type": "object",
  "properties": {
    "colors": {
      "type": "object",
      "properties": {
        "options": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "opacities": {
                "type": "array",
                "items": {
                  "type": "number",
                  "minimum": 0.01,
                  "maximum": 1
                }
              },
              "props": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["bg", "text", "fill", "border", "stroke"]
                }
              }
            }
          }
        },
        "staticColors": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_]+$": {
              "type": "string",
              "format": "color"
            }
          }
        },
        "themes": {
          "type": "object",
          "properties": {
            "dark": {
              "type": "object",
              "additionalProperties": {
                "type": "string",
                "format": "color"
              }
            },
            "light": {
              "type": "object",
              "additionalProperties": {
                "type": "string",
                "format": "color"
              }
            },
            "Or any theme name you want": {
              "type": "object",
              "additionalProperties": {
                "type": "string",
                "format": "color"
              }
            },
            "additionalProperties": {
              "type": "object",
              "additionalProperties": {
                "type": "string",
                "format": "color"
              }
            }
          }
        }
      },
      "required": ["options", "staticColors", "themes"]
    },
    "useStaticNumbers": {
      "type": "boolean"
    },
    "projectDir": {
      "type": "string"
    },
    "content": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "styles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "props": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "variableName": {
            "type": "string"
          },
          "values": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": ["props", "variableName", "values"]
      }
    }
  },
  "required": ["colors", "useStaticNumbers", "content", "projectDir", "styles"]
}
